{% extends 'base.html.twig' %}
{% block title %}
    Nouveau
{% endblock %}
{% block body %}
    <div class="container">
        <h1 class="mt-4">Creation des nouveaux ingredients</h1>
    {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>

        <div class="row">
            <div class="col">
                {{ form_row(form.nom) }}
            </div>
            <div class="col" id="some-custom-id">
                {{ form_row(form.prix) }}
            </div>
        </div>
    {{ form_end(form) }}
    </div>
{% endblock %}